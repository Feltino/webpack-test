

.modal
  &__come
    display: block
    margin: 0 auto
    width: 300px
    height: 35px
    margin-bottom: 40px
    +ps()
      width: 250px
      height: 35px
    +xxs()
      width: 250px
      height: 35px
    +xs()
      width: 300px
      height: 35px
    +sm()
      width: 300px
      height: 35px
    +md()
      width: 300px
      height: 35px
    +lg()
      width: 300px
      height: 35px

  &__button
    margin: 0 auto
    height: 70px
    color: #fff
    text-transform: uppercase;
    font-size: 13px
    letter-spacing 0.03em
    line-height 1.6em
    border-radius 2px
  &__item
    text-align: center
    open()
.first__loader
  position relative
  height: 100%



#overlay, #overlay1
  display: none;
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  left: 0px;
  top: 0px;
  cursor: pointer;
  z-index 999

#thx, #thx1
  background: #fff
  position: absolute
  left: 50%
  margin-left: -170px
  top: 50%
  padding: 30px
  margin-top: -20px