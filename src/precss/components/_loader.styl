
#loader1, #loader
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  background: rgba(240, 240, 240, 0.91);
  overflow: hidden;
  display: none;


#loader1 img, #loader img
  position: absolute;
  width: 50px;
  height: 50px;
  left: 50%;
  margin-left: -25px;
  top: 50%;
  margin-top: -25px;


#overlay1, #overlay
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  left: 0px;
  top: 0px;
  cursor: pointer;

#thx1, #thx
  background: #fff;
  position: absolute;
  left: 50%;
  margin-left: -170px;
  top: 50%;
  padding: 30px;
  margin-top: -20px;

.relativ, relativ1
  position: relative;

.full
  height: 100vh;
